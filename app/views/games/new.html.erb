<div class="container">
  <h1>New game</h1>
  <div class="flex">
    <% @letters.each do |letter| %>
    <div class="letter">
      <%= letter %>
      </div>
    <% end %>
  </div>
  <div class="form">
    <form action="/score" method="post">
      <input type="text" name="word" placeholder="What's your longest word ?">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <input type="submit">
    </form>
  </div>
</div>
